<Window x:Class="CLIENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLIENT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid Name="CarsListView" Height="350"></DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="GetButton" Content="GET" Width="100" Margin="0 0 10 0" Click="GetButton_Click"></Button>
                <Button Name="PostButton" Content="POST" Width="100" Margin="0 0 10 0" Click="PostButton_Click" ></Button>
                <Button Name="PutButton" Content="PUT" Width="100" Margin="0 0 10 0" Click="PutButton_Click"></Button>
                <Button Name="DeleteButton" Content="DELETE" Width="100" Margin="0 0 10 0" Click="DeleteButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
